@{
    ViewBag.Title = "StartPage";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@section CssSection
{
    <link href="~/Content/CSS/home.css" rel="stylesheet" />
}

<a href='@Url.Action("Register", "Profile")'>
    <div class="menu-square">
        @if (ViewBag.IsUserAuthenticated)
        {
            Html.RenderPartial("_LoginOrRegister");
        }
        else
        {
            Html.RenderPartial("_UserProfile");
        }
    </div>
</a>
<div class="menu-square grayed">
    <div class="menu-option-text">
        Stats
    </div>
</div>
<div class="menu-square clear grayed">
    <div class="menu-option-text">
        New Game
    </div>
</div>
<div class="menu-square grayed">
    <div class="menu-option-text">
        Coming soon...
    </div>
</div>
